# Tempo Distributed Tracing Configuration Example
# Add these settings to your .env file

# Enable/disable distributed tracing
TRACING_ENABLED=true

# Tempo OTLP gRPC endpoint
# For local Docker: http://localhost:4317
# For Docker Compose network: http://tempo:4317
TEMPO_ENDPOINT=http://localhost:4317

# Trace sampling rate (0.0 to 1.0)
# 1.0 = 100% of traces (recommended for development)
# 0.1 = 10% of traces (recommended for high-traffic production)
TRACE_SAMPLE_RATE=1.0

# Enable console export for debugging (not recommended for production)
ENABLE_TRACE_CONSOLE_EXPORT=false

# Service name (used in trace identification and Grafana queries)
SERVICE_NAME=identity-service
